<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Photon"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="LogViewer"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <Grid>
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="32px" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Background="Teal">
                <TextBlock x:Name="Header" TextWrapping="Wrap" Text="Log Viewer" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0"/>
            </DockPanel>
            <Grid x:Name="Container" Grid.Row="1" Background="Black">
                <Grid x:Name="PageContent" Background="White">
                    <ScrollViewer mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True">
                        <StackPanel x:Name="Output" Background="Black"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
